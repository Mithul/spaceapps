<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"        android:orientation="vertical"
    tools:context=".TeamActivity"
    >

    <com.roughike.swipeselector.SwipeSelector
        android:id="@+id/toppingSelector"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/zeus"
        app:paddingStart="0dp"
        app:paddingEnd="0dp"
        app:theme="@style/AppTheme"
        app:swipe_titleTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:swipe_descriptionTextAppearance="@style/TextAppearance.AppCompat.Medium"
        />

        <!--<ImageView-->
            <!--android:id="@+id/team_badge"-->
            <!--android:src="@drawable/zeus"-->
            <!--android:layout_weight="6"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp" />-->

    <Button
        style="?attr/buttonStyle"
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"
        android:text="TEST"/>

</LinearLayout>
